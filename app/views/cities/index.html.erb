<div class="container cards-container" id="cities"></div>
  <div class="row">
    <% if @cities.empty? %>
      <p>Sorry, there are no cities available that match your search. Try again.</p>
    <% else %>
      <% @cities.each do |city| %>
        <div class="col-md-4 mb-3 city-card">
          <%= link_to city_path(city) do %>
            <% if city.photos.attached? %>
              <div class="card-category" data-city-id="<%= city.id %>" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path city.photos.first.key, angle: 0 %>)"><%= city.name %>
              </div>
            <% else %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1477959858617-67f85cf4f1df?ixlib=rb-1.2.1&auto=format&fit=crop&w=1713&q=80)">
              <%= city.name %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
</div>


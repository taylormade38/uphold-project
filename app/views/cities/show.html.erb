<div class="container padding-top-xl">
  <div class="row d-flex flex-column justify-content-center">
    <div class="col-6 mx-auto my-3" id="city-title">
      <h1 class="text-center"><%= @city.name %></h1>
      <%= link_to "Write a Report", new_report_path, class: "new-report-button btn btn-outline-secondary align-self-center"%>
    </div>
  </div>
  <div class="row content">
    <div class="col-md-6">
      <div id="map" style="width: 100%; height: 100vh;" data-markers="<%= @markers.to_json %>"
        >
        <!-- map goes here -->
      </div>
    </div>
    <div class="col-md-6">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview" role="tab" aria-controls="overview" aria-selected="true">Overview</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="shootings-tab" data-toggle="tab" href="#shootings" role="tab" aria-controls="shootings" aria-selected="false">Shootings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="force-tab" data-toggle="tab" href="#force" role="tab" aria-controls="force" aria-selected="false">Use of Force</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profiling</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="progress-tab" data-toggle="tab" href="#progress" role="tab" aria-controls="progress" aria-selected="false">Progress</a>
        </li>
      </ul>
      <div class="tab-content" id="statTabContent">

        <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">

          <p>Civilian Complaints</p>
          <div class="progress">
            <div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
          </div>

          <p>Use of Force</p>
          <div class="progress">
            <div class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
          </div>

          <p>Police Involved Killings</p>
          <div class="progress">
            <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
          </div>

           <p>Positive Changes</p>
          <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>

        <div class="tab-pane fade" id="shootings" role="tabpanel" aria-labelledby="shootings-tab">
          <p>Deaths</p>
          <div class="progress">
            <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
          </div>

        </div>
        <div class="tab-pane fade" id="force" role="tabpanel" aria-labelledby="force-tab">Use of Force</div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">Profiling</div>
        <div class="tab-pane fade" id="progress" role="tabpanel" aria-labelledby="progress-tab">Progress</div>
      </div>
      <%= form_tag city_path(@city), method: :get, remote: true, id: 'tag-search', class: 'form-inline search-bar' do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
        placeholder: "Search by Tag"
        %>
        <%= submit_tag "Search", class: "btn btn-primary submit-button" %>
        <% end %>
        <div class="report-container">
          <% @reports.each do |report| %>
          <%= render partial: 'shared/report_card', locals: { report: report } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>


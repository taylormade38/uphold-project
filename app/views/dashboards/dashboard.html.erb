
<div class="dashboard-container">
  <div class="container">
    <h2>Dashboard</h2>
    <div class="row">
      <div class="col-12 col-md-6 col-lg-4" >
        <div class="card">
          <p>Profile</p>
          <hr class="divider mt-1 mb-2" />
          <td><%= current_user.first_name %></td>
          <td><%= current_user.last_name %></td>
          <br>
          <td><%= current_user.email %></td>
          <br>
          <hr class="divider mt-1 mb-2" />
        </div>
      </div>
      <div class="tabs">
        <ul class="list-inline tabs-underlined">
          <li>
            <a href="#pills-activity" class="tab-underlined active" id="pills-activity">Your Activty</a>
          </li>
          <li>
            <a href="#pills-submissions" class="tab-underlined" id="pills-submissions">Your Report Submissions</a>
          </li>
        </ul>
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-activity" role="tabpanel" aria-labelledby="pills-activity-tab">
          <div class="row">
            <p>You don't have any activity to show. <%= link_to "Browse city reports here!", cities_path %></p>
          </div>
        </div>
      </div>
      <div class="tab-pane fade" id="pills-submissions" role="tabpanel" aria-labelledby="pills-submissions-tab">
        <div class="row">
          <% if @reports.empty? %>
          <p>You haven't made any reports yet. <%= link_to "Browse city reports here!", cities_path %></p>
          <% else %>
          <% @reports.each do |report| %>
          <%= link_to report_path(report) do %>
          <div class="col-md-4">
            <%= render partial: 'shared/report_card', locals: { report: report } %>
            <% end %>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>

    </div>
  </div>
</div>

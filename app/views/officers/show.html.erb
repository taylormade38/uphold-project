<div class="container padding-top-xl">
<div class="row officer-personal-info-container d-flex flex-row w-100 h-25 bg-white">

    <div class="officer-picture col-6" style="width: 18rem;">
      <img src="https://source.unsplash.com/1600x900/?police" class="card-img-top" alt="...">
    </div>

    <div class="officer-personal-info col-6">
      <div class="card-body">
        <h5 class="card-title"><%= @officer.first_name %> <%= @officer.last_name %></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Negative Reports - <%= @officer.reports.where(evaluation: "negative").count %></li>
        <li class="list-group-item">Neutral Reports - <%= @officer.reports.where(evaluation: "neutral").count %></li>
        <li class="list-group-item">Positive Reports - <%= @officer.reports.where(evaluation: "positive").count %></li>
      </ul>
<!--       <div class="card-body">
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
      </div> -->
    </div>

 </div>

<div class="row officer-conduct-summary">
</div>
<div class="officer-conduct-full">
    <div class="card text-center">
      <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs justify-content-center">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#nav-timeline">Timeline</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#nav-map">Map</a>
          </li>
        </ul>
      </div>
      <div class="tab-content">
          <div class="tab-pane fade show active" id="nav-timeline" role="tabpanel" aria-labelledby="nav-timeline-tab">
              <div class="reports-container">
                  <ul class="reports-list list-group list-group-flush">
                      <% @reports.each do |r| %>
                          <li class="report list-group-item d-flex">
                            <div class="report-evaluation col-3 d-flex align-self-center justify-content-center">
                                <% if r.evaluation == "positive" %>
                                    <div class="evaluation btn-success col-6 text-center rounded">
                                        <%= r.evaluation %>
                                    </div>
                                <% elsif r.evaluation == "negative" %>
                                    <div class="evaluation btn-danger col-7 text-center rounded">
                                        <%= r.evaluation %>
                                    </div>
                                <% elsif r.evaluation == "neutral"%>
                                    <div class="evaluation btn-danger col-7 text-center rounded">
                                        <%= r.evaluation %>
                                    </div>
                                <% end %>
                            </div>
                            <div class="report-content col-9 text-left">
                                <small class="card-text"><%= r.created_at.strftime("%e %b %Y %H:%M:%S%p") %></small>
                                <p class="card-text"><%= r.content %></p>
                            </div>
                          </li>
                    <% end %>
                  </ul>
              </div>
          </div>
          <div class="tab-pane fade" id="nav-map" role="tabpanel" aria-labelledby="nav-profile-tab">
              <div id="map" style="width: 100%; height: 100vh;" data-markers="<%= @markers.to_json %>">
                <!-- map goes here -->
              </div>
          </div>
      </div>
    </div>
</div>
</div>

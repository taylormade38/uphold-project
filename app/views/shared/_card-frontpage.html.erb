<div class="cards-container-frontpage container">
  <div class="home-cards">
 <% @cities.each do |city| %>
  <%= link_to city_path(city) do %>
      <div class="card-category <%= city.name.downcase %>-picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= city.find_photo %>)">
      <div class="overlay-frontpage-card">
        <p>UpHold Reports: <%= city.reports.length %>
      Formal PD Complaints: <%= city.complaints_against_police %>
      Use of Force: <%= city.use_of_force_incidents %>
      Officer Involved Shootings: <%= city.officer_involved_shootings %>
      New Laws Proposed: <%= rand(1..5).to_i %>"</p>
      </div>
      <span class="city-card-title"><%= city.name %></span>
      <div class="card-description">
        <p><i class="far fa-bookmark" aria-hidden="true"></i> <%= city.reports.length %> reports today</p>
      </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>



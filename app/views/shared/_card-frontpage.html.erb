<div class="cards-container-frontpage container">
  <div class="home-cards">
 <% @cities.each do |city| %>
  <%= link_to city_path(city) do %>
      <div class="card-category <%= city.name.downcase %>-picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= city.find_photo %>)">
      <div class="overlay-frontpage-card">
        <ul class="card-fp-list">
        <li>🚨 <small> UpHold Reports:</small> <%= city.reports.length %></li>
        <li>📝 <small>Formal PD Complaints:</small> <%= city.complaints_against_police %></li>
        <li>👊 <small>Use of Force:</small> <%= city.use_of_force_incidents %></li>
        <li>🔫 <small>Officer Involved Shootings:</small> <%= city.officer_involved_shootings %></li>
        <li>⚖️ <small>New Laws Proposed:</small> <%= rand(1..5).to_i %></li>
      </ul>
      </div>
      <span class="city-card-title"><%= city.name %></span>
      <div class="card-description">
        <p><i class="far fa-bookmark" aria-hidden="true"></i> <%= city.reports.length %> reports today</p>
      </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>



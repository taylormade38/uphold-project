<div class="navbar <%= params[:action] != 'home' ? 'background-white navbar-bottom' : 'home-navbar'%> navbar-expand-sm navbar-light navbar-uphold fixed-top">
  <%= link_to root_path, id: "link-icon" do %>
  <div class="logo">
  <i class="fas fa-fist-raised"></i><span class="title-bar">UpHold</span>
  </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Submit Report", new_report_path, class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <%= link_to "Cities", cities_path, class: "nav-link" %>
      </li>
      <% if !user_signed_in? %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% else %>
      <li class="nav-item dropdown">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://cdn0.iconfinder.com/data/icons/unigrid-flat-human-vol-2/90/011_101_anonymous_anonym_hacker_vendetta_user_human_avatar-512.png">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Dashboard", dashboard_path, class: "nav-dropdown-link"  %>
          <%= link_to "My Profile", user_path(current_user), class: "nav-dropdown-link" %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-dropdown-link" %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>

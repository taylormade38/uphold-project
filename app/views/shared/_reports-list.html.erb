
<div class="container">
  <h2>Tabs design</h2>
  <div class="tabs-list">
    <div class="tabslist-item active">
      <h3>350</h3>
      <p>Reports</p>
    </div>
    <div class="tabslist-item">
      <h3>5</h3>
      <p>Activity</p>
    </div>
  </div>

  <h2>List design</h2>
  <ul class="list-unstyled">
    <li class="product">

      <div class="product-upvote text-center">
        <i class="fa fa-caret-up"></i>
        <p>16</p>
      </div>

      <img src="http://unsplash.it/200/120/?random" alt="" class="product-image img-rounded">

      <div class="product-description">
        <h3></h3>
        <p><small><%= report.created_at.strftime("%e %b %Y %H:%M:%S%p") %></small></p>
        <p><%= report.content.first(280) %>... <%= link_to "See More", report_path(report) %></p>
        <p><i class="fas fa-address-card"></i> <%= link_to "#{report.officer.first_name} #{report.officer.last_name}", officer_path(report.officer) %></p>
        <div class="footer-links">
          <a href="#"><i class="fab fa-github"></i></a>
          <a href="#"><i class="fab fa-instagram"></i></a>
          <a href="#"><i class="fab fa-facebook"></i></a>
          <a href="#"><i class="fab fa-twitter"></i></a>
          <a href="#"><i class="fab fa-linkedin"></i></a>
        </div>
      </div>

      <ul class="list-inline product-controls">
      <a href=""><i class="fa fa-bookmark"></i></a>
        <% if policy(ReportBookmark.new(report: report)).create? %>
          <%= link_to 'Bookmark', report_report_bookmarks_path(report), method: :post %>
          <% else %>
          <%= link_to 'Unbookmark', report_report_bookmark_path(report), method: :delete %>
          <% end %>

      </ul>
    </li>


  </ul>
</div>

